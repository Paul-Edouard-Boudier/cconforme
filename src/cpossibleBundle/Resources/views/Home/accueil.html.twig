        $(document).ready(function() {

            $('#form').on('submit', function() {
                var result = $('#result')
                var address = document.getElementById('adress').value
                var name = document.getElementById('name').value
                data = address ? address : null
                if(!data) data = name ? name : null
                data = data.split("|")[1]
                $.ajax({
                    method: 'post',
                    url: '',
                    data: {data : data},
                    dataType: 'json',
                    success: function(data) {
                        result.html(data.message)
                        switch (data.status) {
                            case 'ok':
                                result.removeClass('alert-danger')
                                result.addClass('alert-success')
                                console.log(result)
                                break
                            case 'ko':
                                result.removeClass('alert-success')
                                result.addClass('alert-danger')
                                console.log(result)
                                break
                        }
                    },
                    error: function(data) {
                        console.log(data)
                    }
                })
                return false;
            })

            $('.storage').on('click', function() {
              //console.log('hello');
                var lat = parseFloat($(this)[0].attributes[1].value);
                var lng = parseFloat($(this)[0].attributes[2].value);
                // debugger;
                $.post('/around',{'lat':lat,'lng':lng}).done(function(data) {
                      // DisplayMultipleMarkers();
                      console.log('it works');
                      debugger;
                      // console.log('{{app.session.get('ajaxRequest')}}');
                    });
                });
            })

        function initMap() {
            // var markers = []; // Array of google map marker object
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 16,
                center: {lat: 45.750000, lng: 4.850000}
            });

            document.getElementById('search-btn').addEventListener('click', function() {
                var geocoder = new google.maps.Geocoder();
                geocodeAddress(geocoder, map);
            });
        }

        function geocodeAddress(geocoder, resultsMap) {
            var address = document.getElementById('adress').value
            var name = document.getElementById('name').value
            data = address ? address : null
            if(!data) data = name ? name : null
            data = data.split("|")[1]
            geocoder.geocode({'address': data}, function(results, status) {
                if (status === 'OK') {
                    resultsMap.setCenter(results[0].geometry.location);
                    var marker = new google.maps.Marker({
                        map: resultsMap,
                        position: results[0].geometry.location
                    });
                    //var markers = []; // Setup an array to push marker's in, not useful actually
                    //markers.push(marker);
                    // Retrive lat and lng of marker and push it in data attr
                    document.getElementsByClassName('storage')[0].attributes[1].value = marker.position.lat();
                    document.getElementsByClassName('storage')[0].attributes[2].value = marker.position.lng();
                    // debugger;
                } else {
                }
            });
        }
    </script>




