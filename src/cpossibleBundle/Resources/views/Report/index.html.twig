{% extends "::base.html.twig" %}

{% block body %}

  {% if reports %}
    <br>
    <h1>Listes des signalements enregistrés</h1>
    <br>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Nom constaté de l'erp</th>
          <th scope="col">Adresse constatée</th>
          <th scope="col">Mail de l'utilisateur</th>
          <th scope="col">Message</th>
          <th scope="col">Supprimer</th>
        </tr>
      </thead>
      <tbody>
        {% for report in reports %}
        <tr>
          <td> {{ report.NomErp}}</td>
          <td> {{ report.AdresseSignalee }}</td>
          <td> {{ report.UserEmail}}</td>
          <td> {{ report.Message}}</td>
          <td>
            <a href="{{ path('report_delete', { 'id': report.Id }) }}"><i class="fa fa-trash" aria-hidden="true"></i></a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
</table>
  {% else %}
    <br>
    <br>
    <h1>Aucune erp n'a été signalé pour le moment</h1>
    <br>
    <br>
  {% endif %}

{% endblock %}
