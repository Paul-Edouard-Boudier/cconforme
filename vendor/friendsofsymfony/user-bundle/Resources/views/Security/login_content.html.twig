{% extends 'base.html.twig' %}

{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}
    <div class="container-fluid" style="height: auto; margin-top: 5%; margin-bottom: 5%">
        <div class="row">
            <div id="loginform" class="col-sm-12 animated bounceInLeft">
                <section id="content">
                    <form action="{{ path("fos_user_security_check") }}" method="POST">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <h1>Connexion</h1>
                        <div style="position: relative">
                            <i style="position: absolute; top: 25%; right: 83%" class="fa fa-user" aria-hidden="true"></i>
                            <input type="text" id="username" name="_username" placeholder="Nom d'Utilisateur..." value="{{ last_username }}" required="required">
                        </div>

                        <div style="position: relative;">
                            <i style="position: absolute; top: 25%; right: 83%" class="fa fa-unlock-alt" aria-hidden="true"></i>
                            <input type="password" id="password" name="_password" placeholder="Mot de Passe..." required="required" />
                        </div>

                        {% if error %}
                            <div style="margin: auto; width: 80%" class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div style="display: flex; justify-content: center">
                            <input type="submit" id="_submit" name="_submit" value="{{ 'Login'|trans }}" />
                        </div>


                    </form><!-- form -->
                </section><!-- content -->
            </div>
        </div>
    </div>



{% endblock %}
